{
  "name": "git-intent",
  "version": "0.0.3",
  "description": "Git workflow tool for intentional commits â€” define your commit intentions first for clearer, more atomic changes.",
  "keywords": [
    "git",
    "intentional-commits",
    "commit",
    "git-workflow",
    "meaningful-commits",
    "commit-first",
    "git-todo",
    "todo-driven"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "commonjs",
  "bin": {
    "git-intent": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
    "format": "biome format",
    "format:fix": "biome format --write",
    "pkg:build": "pnpm pkg:build:macos && pnpm pkg:build:linux && pnpm pkg:build:win",
    "pkg:build:macos": "pkg . -t node18-macos-arm64 -o build/git-intent",
    "pkg:build:linux": "pkg . -t node18-linux-x64 -o build/git-intent",
    "pkg:build:win": "pkg . -t node18-win-x64 -o build/git-intent.exe",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "execa": "^5.1.1",
    "external-editor": "^3.1.0",
    "fs-extra": "^11.3.0",
    "nanoid": "^3.3.7",
    "ora": "^5.4.1",
    "prompts": "^2.4.2",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.24",
    "@types/prompts": "^2.4.9",
    "pkg": "^5.8.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "packageManager": "pnpm@10.3.0"
}
