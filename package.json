{
  "name": "git-intent",
  "version": "0.0.1",
  "description": "Git workflow tool for intentional commits - Define your commit intentions before coding to write more meaningful and purposeful code",
  "keywords": [
    "git",
    "intentional-commits",
    "commit",
    "git-workflow",
    "meaningful-commits",
    "commit-first",
    "git-todo",
    "todo-driven"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "bin": {
    "git-intent": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
    "format": "biome format",
    "format:fix": "biome format --write",
    "pkg:build": "pnpm build && pkg . --no-bytecode -t node18-macos-x64,node18-linux-x64,node18-win-x64 --out-dir build",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "external-editor": "^3.1.0",
    "fs-extra": "^11.3.0",
    "nanoid": "^5.0.9",
    "ora": "^8.2.0",
    "prompts": "^2.4.2",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "@types/prompts": "^2.4.9",
    "@vitest/ui": "^3.0.6",
    "pkg": "^5.8.1",
    "tsup": "^8.3.6",
    "type-fest": "^4.34.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  },
  "packageManager": "pnpm@10.3.0"
}
