{
  "name": "git-intent",
  "version": "0.0.12",
  "description": "Git workflow tool for intentional commits â€” define your commit intentions first for clearer, more atomic changes.",
  "keywords": [
    "git",
    "intentional-commits",
    "commit",
    "git-workflow",
    "meaningful-commits",
    "commit-first",
    "git-todo",
    "todo-driven"
  ],
  "license": "MIT",
  "files": ["dist"],
  "type": "module",
  "bin": {
    "git-intent": "./dist/index.cjs"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.cjs",
    "format": "biome format",
    "format:fix": "biome format --write",
    "pkg:build:macos": "pnpm build && pkg . --no-bytecode -t node18-macos-arm64 -o build/git-intent-macos"
  },
  "pkg": {
    "assets": ["dist/**/*"],
    "outputPath": "build"
  },
  "dependencies": {
    "@offlegacy/git-intent-core": "workspace:*",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "external-editor": "^3.1.0",
    "ora": "^8.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/prompts": "^2.4.9",
    "pkg": "^5.8.1"
  }
}
