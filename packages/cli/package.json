{
  "name": "git-intent",
  "version": "0.0.10",
  "description": "Git workflow tool for intentional commits â€” define your commit intentions first for clearer, more atomic changes.",
  "keywords": [
    "git",
    "intentional-commits",
    "commit",
    "git-workflow",
    "meaningful-commits",
    "commit-first",
    "git-todo",
    "todo-driven"
  ],
  "license": "MIT",
  "files": ["dist"],
  "type": "module",
  "bin": {
    "git-intent": "./dist/index.cjs"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.cjs",
    "format": "biome format",
    "format:fix": "biome format --write",
    "pkg:build:macos": "pkg . --no-bytecode -t node18-macos-arm64 -o build/git-intent-macos",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "pkg": {
    "assets": ["dist/**/*"],
    "outputPath": "build"
  },
  "dependencies": {
    "@git-intent/core": "workspace:*",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "external-editor": "^3.1.0",
    "fs-extra": "^11.3.0",
    "ora": "^5.4.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.11.24",
    "@types/prompts": "^2.4.9",
    "pkg": "^5.8.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
