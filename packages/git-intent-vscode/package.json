{
  "name": "git-intent-vscode",
  "displayName": "Git Intent",
  "description": "Git workflow tool for intentional commits â€” define your commit intentions first for clearer, more atomic changes.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": ["SCM Providers", "Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-intent-vscode.start",
        "title": "Git Intent: Start"
      },
      {
        "command": "git-intent-vscode.addIntent",
        "title": "Git Intent: Add New Intent",
        "icon": "$(add)"
      },
      {
        "command": "git-intent-vscode.startIntent",
        "title": "Git Intent: Start Working on Intent",
        "icon": "$(play)"
      },
      {
        "command": "git-intent-vscode.commitIntent",
        "title": "Git Intent: Commit Intent",
        "icon": "$(check)"
      },
      {
        "command": "git-intent-vscode.cancelIntent",
        "title": "Git Intent: Cancel Intent",
        "icon": "$(circle-slash)"
      },
      {
        "command": "git-intent-vscode.deleteIntent",
        "title": "Git Intent: Delete Intent",
        "icon": "$(trash)"
      },
      {
        "command": "git-intent-vscode.refreshIntents",
        "title": "Git Intent: Refresh Intents",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-intent-sidebar",
          "title": "Git Intent",
          "icon": "assets/icons/icon.png"
        }
      ]
    },
    "views": {
      "git-intent-sidebar": [
        {
          "id": "git-intent-view",
          "name": "Intents",
          "icon": "$(git-branch)",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "git-intent-vscode.addIntent",
          "when": "view == git-intent-view",
          "group": "navigation@1"
        },
        {
          "command": "git-intent-vscode.refreshIntents",
          "when": "view == git-intent-view",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "git-intent-vscode.startIntent",
          "when": "view == git-intent-view && viewItem == intent.created",
          "group": "inline"
        },
        {
          "command": "git-intent-vscode.commitIntent",
          "when": "view == git-intent-view && viewItem == intent.in_progress",
          "group": "inline"
        },
        {
          "command": "git-intent-vscode.cancelIntent",
          "when": "view == git-intent-view && viewItem == intent.in_progress",
          "group": "inline"
        },
        {
          "command": "git-intent-vscode.deleteIntent",
          "when": "view == git-intent-view && viewItem =~ /intent\\.(created|completed|cancelled)/",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "git-intent-vscode.startIntent",
          "when": "workspaceHasGit"
        },
        {
          "command": "git-intent-vscode.commitIntent",
          "when": "workspaceHasGit"
        },
        {
          "command": "git-intent-vscode.cancelIntent",
          "when": "workspaceHasGit"
        },
        {
          "command": "git-intent-vscode.deleteIntent",
          "when": "false"
        },
        {
          "command": "git-intent-vscode.refreshIntents",
          "when": "workspaceHasGit"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile",
    "check-types": "tsc --noEmit",
    "test": "vscode-test"
  },
  "dependencies": {
    "@offlegacy/git-intent-core": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
